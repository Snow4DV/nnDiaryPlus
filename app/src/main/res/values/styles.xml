<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#3a77e0</item>
    <item name="colorPrimaryDark">#3266bf</item>
    <item name="colorAccent">#448AFF</item>
    <item name="android:textColorHint">@color/secondaryText</item>


  </style>
  <style name="AppThemeIP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Customize your theme here. -->

    <item name="colorPrimary">#3F51B5</item>
    <item name="colorPrimaryDark">#303F9F</item>
    <item name="colorAccent">#448AFF</item>
    <item name="android:textColorHint">@color/secondaryText</item>
    <item name="android:popupMenuStyle">@style/PopupMenu</item>

  </style>


  <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
    <item name="android:popupBackground">@android:color/white</item>
  </style>
  <style name="LoginTheme" parent="Theme.MaterialComponents.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@android:color/white</item>
    <item name="colorOnSurface">@android:color/white</item>
    <item name="colorPrimaryDark">@android:color/white</item>
    <item name="colorAccent">@android:color/white</item>
    <item name="android:textColorHint">@android:color/white</item>
    <item name="colorSurface">@color/white</item>
  </style>

  <style name="IPStyle" parent="Theme.MaterialComponents.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/accent</item>
    <item name="popupMenuBackground">@color/white</item>

  </style>


  <style name="PrimaryButton" parent="Theme.AppCompat">
    <item name="colorButtonNormal">	#FFFFFF</item>
    <item name="colorControlHighlight">@color/colorAccent</item>
  </style>



  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>
  <style name="ActionBar" parent="Theme.AppCompat.NoActionBar">
    <item name="actionMenuTextColor">@android:color/white</item>
  </style>
  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


  <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
    <item name="android:windowNoTitle">false</item>
    <item name="colorPrimary">#3F51B5</item>
    <item name="colorPrimaryDark">#303F9F</item>
    <item name="colorAccent">#448AFF</item>
    <item name="android:textColorHint">@color/secondaryText</item>

  </style>

</resources>
